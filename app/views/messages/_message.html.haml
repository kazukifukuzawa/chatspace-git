.chat-main__message-list--box{"data-message-id": "#{message.id}"}
  .chat-main__message-list--box__info
    .chat-main__message-list--box__info--talker 
      = message.user.name
    .chat-main__message-list--box__info--date 
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message-list--box__text
    - if message.content.present?
      %p.chat-main__message-list--box__text--meen 
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?